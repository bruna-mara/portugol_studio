programa
{
	//laço condicional simples e composto aula I
	funcao inicio()
	{
		inteiro idade
		escreva("Digite sua idade: ");
		leia(idade)	
		se (idade>=18)
		{
			escreva("Você é maior de idade.") 
		}
		senao 
		{
			escreva("Você é menor de idade.")
		}
	}
}
